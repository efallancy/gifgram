
<div class="col s12 m8 offset-m2 l6 offset-l3">
  <div class="card-panel">
    <div class="row valign-wrapper">
      <div class="col s2">
        <%= cl_image_tag @user.profile_img, :alt => @user.name, :class => "circle responsive-img" %>
      </div>
      <div class="col s8">
        <span class="profile-username-font"><%= @user.username %></span>
        <br />
        <span class="profile-name-font"><%= @user.name %></span>
        <%= @user.biography %>
        <div><span id="posts"><%= @user.posts.count %> posts</span></div>
        <div>
        </div>
      </div>
    </div>
  </div>
</div>
<br/>


<% @posts.each do | post | %>
  <div class="row">
    <div class="col s12 m8 offset-m2 l6 offset-l3">
      <div class="card hoverable">
        <div class="card-image">
          <%= link_to( cl_image_tag( post.post_gif ), user_post_comments_path( :user_id => post.user.id, :post_id => post.id ) )%>
        </div>
        <div class="card-content">
          <p><%= post.caption %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
